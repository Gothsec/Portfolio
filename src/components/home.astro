---
import LogoWall from "../components/logoWall.astro";
import HomeSvgs from "./home-svgs.astro";
import ImagenUser from "./imagenUsuario.astro";


const presentacion = `Pablo Gil Diaz`
const desarrollo = `Frontend <br /> Developer`
const sobremi = `Transforming ideas into interactive and seamless digital experiences
with cutting-edge <span class="text-[var(--sec)] shiny-sec"> frontend</span> development.`

---

<section class="text-[var(--white)] mt-12 md:mt-0" id="home">
  <div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14">
    <div class="flex flex-col lg:flex-row gap-8 items-start">
      <div class="flex-1 space-y-6">

        <p 
        class="text-md md:text-lg text-[var(--white-icon)] shiny-white">
        {presentacion}
        </p>

        <h1
        class="text-[var(--white)] text-5xl md:text-6xl font-medium text-pretty leading-none"
        set:html={desarrollo}
        ></h1>
        <p 
        class="text-md md:text-2xl text-[var(--white-icon)] max-w-2xl"
        set:html={sobremi}></p>

        <div 
        class="flex justify-start gap-2 pt-3">
          <HomeSvgs />
        </div>
    
      </div>

      <div
      class="lg:w-1/3 aspect-square rounded-2xl overflow-hidden bg-[#1414149c] border border-[var(--white-icon-tr)]"
      >
        <ImagenUser />
      </div>

    </div>

    <LogoWall />

    </div>
  </div>
</section>

<style is:global>
  .shiny-sec {
    background: linear-gradient(135deg, #a476ff 25%, #eee5ff 50%, #a476ff 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }
</style>
